<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 项目坐标 -->
    <groupId>kulib</groupId>
    <artifactId>pp_1602a</artifactId>
    <version>1.1.1.0</version>
    <packaging>jar</packaging>

    <distributionManagement>
            <repository>
                    <id>nexus-releases</id>
                <name>Nexus Release Repository</name>
                <url>https://github.com/wislap/pp_1602a/releases/</url>
            </repository>
    </distributionManagement>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <!-- 依赖项添加 -->
    <dependencies>
        <!-- jackson -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.15.3</version>
        </dependency>

        <!-- JavaFX 控件模块 -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>21.0.5</version>
            <classifier>win</classifier>
        </dependency>

        <!-- JavaFX 图形模块 -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-graphics</artifactId>
            <version>21.0.5</version>
            <classifier>win</classifier>
        </dependency>

        <!-- JavaFX 基础模块 -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>21.0.5</version>
            <classifier>win</classifier>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- 编译器插件 -->
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>

            <!-- 打包可执行 JAR 的插件 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>kulib.Main</mainClass> <!-- 替换为你的主类 -->
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- 将依赖打包进 JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.4.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>kulib.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- launch4j 插件 -->
             <plugin>
                 <groupId>com.akathist.maven.plugins.launch4j</groupId>
                 <artifactId>launch4j-maven-plugin</artifactId>
                <executions>
                    <execution>
                    <id>create-exe</id>
                    <phase>package</phase> <!-- 绑定到package阶段 -->
                    <goals>
                        <goal>launch4j</goal>
                    </goals>
                    <configuration>
                        <headerType>gui</headerType> <!-- console/gui -->
                        <outfile>${project.build.directory}/${project.build.finalName}.exe</outfile>
                        <jar>${project.build.directory}/${project.build.finalName}.jar</jar>
                        <errTitle>启动错误</errTitle>
                        <classPath>
                            <mainClass>kulib.Main</mainClass> <!-- 替换您的入口类 -->
                        </classPath>
                        <downloadUrl>https://sourceforge.net/projects/launch4j/files/launch4j-3/3.14/launch4j-3.14-win32.zip</downloadUrl>
                        <jre>
                            <minVersion>17</minVersion>
                            <maxVersion>21</maxVersion>
                            <initialHeapSize>256</initialHeapSize>
                            <maxHeapSize>1024</maxHeapSize>

                            <path>./jre</path>
                        </jre>
                        <versionInfo>
                            <fileVersion>${version}</fileVersion>
                            <productVersion>${version}</productVersion>
                            <txtFileVersion>pp_1602a_exe</txtFileVersion>
                        </versionInfo>
                    </configuration>
                </execution>
            </executions>
        </plugin>
                 
        </plugins>
    </build>

</project>
